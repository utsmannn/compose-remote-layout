{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Compose Remote Layout Schema",
  "description": "Schema for dynamic Jetpack Compose layouts",
  "type": "object",
  "oneOf": [
    { "$ref": "#/definitions/ColumnComponent" },
    { "$ref": "#/definitions/RowComponent" },
    { "$ref": "#/definitions/BoxComponent" },
    { "$ref": "#/definitions/TextComponent" },
    { "$ref": "#/definitions/ButtonComponent" },
    { "$ref": "#/definitions/CardComponent" },
    { "$ref": "#/definitions/SpacerComponent" },
    { "$ref": "#/definitions/CustomComponent" }
  ],
  "definitions": {
    "BaseModifier": {
      "type": "object",
      "properties": {
        "width": { "type": "integer", "description": "Width in dp" },
        "height": { "type": "integer", "description": "Height in dp" },
        "size": { "type": "integer", "description": "Size in dp (for square dimensions)" },
        "fillMaxWidth": { "type": "boolean", "default": false },
        "fillMaxHeight": { "type": "boolean", "default": false },
        "fillMaxSize": { "type": "boolean", "default": false },
        "padding": { "$ref": "#/definitions/PaddingValues" },
        "margin": { "$ref": "#/definitions/MarginValues" },
        "background": { "$ref": "#/definitions/StyleValues" },
        "border": { "$ref": "#/definitions/BorderValues" },
        "shadow": { "$ref": "#/definitions/ShadowValues" },
        "scrollable": { "type": "boolean", "default": false },
        "clickId": { "type": "string", "description": "ID for click handling" },
        "alpha": { "type": "number", "minimum": 0, "maximum": 1 },
        "rotate": { "type": "number", "description": "Rotation in degrees" },
        "scale": { "$ref": "#/definitions/ScaleValues" },
        "offset": { "$ref": "#/definitions/OffsetValues" },
        "aspectRatio": { "type": "number", "description": "Width to height ratio" },
        "clip": { "type": "boolean", "default": false },
        "wrapContentHeight": { "type": "boolean", "default": false },
        "wrapContentWidth": { "type": "boolean", "default": false }
      }
    },
    "LayoutModifier": {
      "type": "object",
      "properties": {
        "base": { "$ref": "#/definitions/BaseModifier" },
        "verticalArrangement": {
          "type": "string",
          "enum": ["top", "bottom", "center", "spacebetween", "spacearound", "spaceevenly"]
        },
        "horizontalAlignment": {
          "type": "string",
          "enum": ["start", "end", "center"]
        },
        "horizontalArrangement": {
          "type": "string",
          "enum": ["start", "end", "center", "spacebetween", "spacearound", "spaceevenly"]
        },
        "verticalAlignment": {
          "type": "string",
          "enum": ["top", "bottom", "center"]
        },
        "contentAlignment": {
          "type": "string",
          "enum": ["center", "topstart", "topcenter", "topend", "centerstart", "centerend", "bottomstart", "bottomcenter", "bottomend"]
        }
      }
    },
    "PaddingValues": {
      "type": "object",
      "properties": {
        "all": { "type": "integer" },
        "horizontal": { "type": "integer" },
        "vertical": { "type": "integer" },
        "start": { "type": "integer" },
        "top": { "type": "integer" },
        "end": { "type": "integer" },
        "bottom": { "type": "integer" }
      }
    },
    "MarginValues": {
      "type": "object",
      "properties": {
        "all": { "type": "integer" },
        "horizontal": { "type": "integer" },
        "vertical": { "type": "integer" },
        "start": { "type": "integer" },
        "top": { "type": "integer" },
        "end": { "type": "integer" },
        "bottom": { "type": "integer" }
      }
    },
    "StyleValues": {
      "type": "object",
      "properties": {
        "color": { "type": "string", "description": "Color in hex format (#RGB, #RGBA, #RRGGBB, #RRGGBBAA)" },
        "alpha": { "type": "number", "minimum": 0, "maximum": 1 },
        "shape": {
          "type": "string",
          "enum": ["rectangle", "circle", "roundedcorner"]
        },
        "radius": { "type": "integer", "description": "Corner radius in dp for roundedcorner shape" }
      }
    },
    "BorderValues": {
      "type": "object",
      "properties": {
        "width": { "type": "integer", "default": 1, "description": "Border width in dp" },
        "color": { "type": "string", "description": "Border color in hex format" },
        "shape": { "$ref": "#/definitions/ShapeValues" }
      }
    },
    "ShapeValues": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["rectangle", "circle", "roundedcorner"],
          "default": "rectangle"
        },
        "cornerRadius": { "type": "integer", "description": "Corner radius in dp for all corners" },
        "topStart": { "type": "integer", "description": "Top start corner radius in dp" },
        "topEnd": { "type": "integer", "description": "Top end corner radius in dp" },
        "bottomStart": { "type": "integer", "description": "Bottom start corner radius in dp" },
        "bottomEnd": { "type": "integer", "description": "Bottom end corner radius in dp" }
      }
    },
    "ShadowValues": {
      "type": "object",
      "properties": {
        "elevation": { "type": "integer", "default": 4, "description": "Shadow elevation in dp" },
        "shape": { "$ref": "#/definitions/ShapeValues" }
      }
    },
    "ScaleValues": {
      "type": "object",
      "properties": {
        "scaleX": { "type": "number", "description": "Horizontal scale factor" },
        "scaleY": { "type": "number", "description": "Vertical scale factor" }
      }
    },
    "OffsetValues": {
      "type": "object",
      "properties": {
        "x": { "type": "integer", "description": "Horizontal offset in dp" },
        "y": { "type": "integer", "description": "Vertical offset in dp" }
      }
    },
    "ComponentWrapper": {
      "oneOf": [
        { "$ref": "#/definitions/ColumnComponent" },
        { "$ref": "#/definitions/RowComponent" },
        { "$ref": "#/definitions/BoxComponent" },
        { "$ref": "#/definitions/TextComponent" },
        { "$ref": "#/definitions/ButtonComponent" },
        { "$ref": "#/definitions/CardComponent" },
        { "$ref": "#/definitions/SpacerComponent" },
        { "$ref": "#/definitions/CustomComponent" }
      ]
    },
    "ColumnComponent": {
      "type": "object",
      "properties": {
        "column": {
          "type": "object",
          "properties": {
            "modifier": { "$ref": "#/definitions/LayoutModifier" },
            "children": {
              "type": "array",
              "items": { "$ref": "#/definitions/ComponentWrapper" }
            }
          }
        }
      },
      "required": ["column"]
    },
    "RowComponent": {
      "type": "object",
      "properties": {
        "row": {
          "type": "object",
          "properties": {
            "modifier": { "$ref": "#/definitions/LayoutModifier" },
            "children": {
              "type": "array",
              "items": { "$ref": "#/definitions/ComponentWrapper" }
            }
          }
        }
      },
      "required": ["row"]
    },
    "BoxComponent": {
      "type": "object",
      "properties": {
        "box": {
          "type": "object",
          "properties": {
            "modifier": { "$ref": "#/definitions/LayoutModifier" },
            "children": {
              "type": "array",
              "items": { "$ref": "#/definitions/ComponentWrapper" }
            }
          }
        }
      },
      "required": ["box"]
    },
    "TextComponent": {
      "type": "object",
      "properties": {
        "text": {
          "type": "object",
          "properties": {
            "modifier": { "$ref": "#/definitions/LayoutModifier" },
            "content": { "type": "string" },
            "color": { "type": "string", "description": "Text color in hex format" },
            "fontSize": { "type": "integer", "description": "Font size in sp" },
            "fontWeight": {
              "type": "string",
              "enum": ["thin", "w100", "extralight", "w200", "light", "w300", "normal", "regular", "w400", "medium", "w500", "semibold", "w600", "bold", "w700", "extrabold", "w800", "black", "w900"]
            },
            "fontStyle": {
              "type": "string",
              "enum": ["normal", "italic"]
            },
            "letterSpacing": { "type": "integer", "description": "Letter spacing in sp" },
            "lineHeight": { "type": "integer", "description": "Line height in sp" },
            "textAlign": {
              "type": "string",
              "enum": ["start", "end", "center", "justify"]
            },
            "textDecoration": {
              "type": "string",
              "enum": ["none", "underline", "linethrough", "underline linethrough"]
            }
          },
          "required": ["content"]
        }
      },
      "required": ["text"]
    },
    "ButtonComponent": {
      "type": "object",
      "properties": {
        "button": {
          "type": "object",
          "properties": {
            "modifier": { "$ref": "#/definitions/LayoutModifier" },
            "content": { "type": "string" },
            "clickId": { "type": "string" },
            "children": {
              "type": "array",
              "items": { "$ref": "#/definitions/ComponentWrapper" }
            },
            "fontColor": { "type": "string", "description": "Text color in hex format" },
            "fontSize": { "type": "integer", "description": "Font size in sp" },
            "fontWeight": {
              "type": "string",
              "enum": ["thin", "w100", "extralight", "w200", "light", "w300", "normal", "regular", "w400", "medium", "w500", "semibold", "w600", "bold", "w700", "extrabold", "w800", "black", "w900"]
            },
            "fontStyle": {
              "type": "string",
              "enum": ["normal", "italic"]
            },
            "letterSpacing": { "type": "integer", "description": "Letter spacing in sp" },
            "lineHeight": { "type": "integer", "description": "Line height in sp" },
            "textAlign": {
              "type": "string",
              "enum": ["start", "end", "center", "justify"]
            },
            "textDecoration": {
              "type": "string",
              "enum": ["none", "underline", "linethrough", "underline linethrough"]
            }
          }
        }
      },
      "required": ["button"]
    },
    "CardComponent": {
      "type": "object",
      "properties": {
        "card": {
          "type": "object",
          "properties": {
            "modifier": { "$ref": "#/definitions/LayoutModifier" },
            "children": {
              "type": "array",
              "items": { "$ref": "#/definitions/ComponentWrapper" }
            }
          }
        }
      },
      "required": ["card"]
    },
    "SpacerComponent": {
      "type": "object",
      "properties": {
        "spacer": {
          "type": "object",
          "properties": {
            "modifier": { "$ref": "#/definitions/LayoutModifier" },
            "height": { "type": "integer", "default": 0, "description": "Height in dp" },
            "width": { "type": "integer", "default": 0, "description": "Width in dp" }
          }
        }
      },
      "required": ["spacer"]
    },
    "CustomComponent": {
      "type": "object",
      "properties": {
        "custom": {
          "type": "object",
          "properties": {
            "modifier": { "$ref": "#/definitions/LayoutModifier" },
            "type": { "type": "string", "description": "Custom component type" },
            "data": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "children": {
              "type": "array",
              "items": { "$ref": "#/definitions/ComponentWrapper" }
            }
          },
          "required": ["type"]
        }
      },
      "required": ["custom"]
    }
  }
}